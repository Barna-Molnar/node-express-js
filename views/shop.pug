extends layouts/main-layout.pug

block content
    main
        h1 My Products
        p List of all the products...
        .grid
            if products.length > 0
                each product in products
                    .grid
                        article.card.product-item
                            header.card__header
                                h1.product__title #{product.title}
                            .card__image
                                img(src="https://png.pngtree.com/png-vector/20230309/ourmid/pngtree-open-book-icon-vector-illustration-clipart-design-png-image_6640266.png", alt="A Book", srcset="")
                            .card__content
                                h2.product__price #{product.price}
                                p.product__description #{product.description}
                            .card__actions 
                                button.btn Add to Cart
            else 
                h1 No products were found ....