<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
            <main>
                <% for (let p of products) { %>
                    <li class="cart__item">
                        <h1>
                            <%= p.productId.title %>
                        </h1>
                        <h2>
                            <%= p.quantity %>
                        </h2>
                    </li>
                    <% } %>
                </ul>
                <div>
                    <span>Total:  <%= totalPrice %> </span>
                </div>
               
            </main>
            <%- include('../includes/end.ejs') %>